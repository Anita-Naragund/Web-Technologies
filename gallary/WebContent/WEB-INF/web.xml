<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>gallary</display-name>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
    
  </welcome-file-list>
  
  <servlet>
  <servlet-name>browseAPictureServlet</servlet-name>
  <servlet-class>com.xworkz.gallary.BrowseAPictureServlet</servlet-class>
  <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>browseAPictureServlet</servlet-name>
  <url-pattern>/browseAPictureAction</url-pattern>
  </servlet-mapping>
  
  <context-param> 
      <description>Location to store uploaded file</description> 
      <param-name>file-upload</param-name> 
      <param-value>
         G:\eclipse\web-application\gallary
      </param-value> 
   </context-param>
</web-app>